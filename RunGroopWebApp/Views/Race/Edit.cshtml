@using RunGroopWebApp.Data.Enum
@using RunGroopWebApp.ViewModels
@model CreateRaceViewModel

<form asp-action="Edit" class="d-flex flex-column align-items-center" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="AddressId" />
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control w-100" placeholder="Enter Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Title</label>
        <input asp-for="Description" class="form-control w-100" placeholder="Enter Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <!-- Other input fields -->
    <div class="mb-3">
        <label asp-for="RaceCategory" class="form-label">Club Category</label>
        <select asp-for="RaceCategory" asp-items="@Html.GetEnumSelectList<RaceCategory>()">
            <option>--Select--</option>
        </select>
        <span asp-validation-for="RaceCategory" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Address.Street" class="form-label">Street</label>
        <input asp-for="Address.Street" class="form-control" placeholder="Street ">
        <span asp-validation-for="Address.Street" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Address.State" class="form-label">State</label>
        <input asp-for="Address.State" class="form-control" placeholder="Enter Street">
        <span asp-validation-for="Address.State" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Address.City" class="form-label">City</label>
        <input asp-for="Address.City" class="form-control" placeholder="Enter City">
        <span asp-validation-for="Address.City" class="text-danger"></span>
    </div>
    <!-- Other address input fields -->
    <div class="mb-3">
        <label asp-for="Image" class="form-label">Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Enter Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
